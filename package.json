{
	"name": "zinnia",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"engines": {
		"node": "20.x"
	},
	"packageManager": "bun@1.3.0",
	"scripts": {
		"dev": "bun run --watch index.ts",
		"build": "bun build index.ts --outdir=dist",
		"vercel": "vercel dev",
		"verify:local": "node scripts/verify-local.mjs",
		"vercel:deploy": "bunx vercel --prod --token $VERCEL_TOKEN --yes",
		"lint": "biome check . && tsc --noEmit",
		"format": "biome format . --write",
		"type-check": "tsc --noEmit",
		"test:stats": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./stats/jest.config.js --runInBand -u",
		"test:leetcode": "cd leetcode && bunx vitest --run --pool=threads",
		"test": "npm run test:stats && npm run test:leetcode",
		"verify:deploy": "node scripts/verify-deploy.mjs"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/bun": "^1.3.2",
		"@types/jest": "^30.0.0",
		"@vercel/node": "^5.5.6",
		"@vitest/coverage-v8": "4.0.8",
		"esbuild": "^0.27.0",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.5",
		"typescript": "^5.9.3",
		"vercel": "^48.10.0",
		"vitest": "4.0.8"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@octokit/graphql": "^9.0.3",
		"@octokit/rest": "^22.0.1",
		"axios": "^1.13.2",
		"dotenv": "^17.2.3",
		"emoji-name-map": "^2.0.3",
		"github-username-regex": "^1.0.0",
		"word-wrap": "^1.2.5"
	}
}
