{
	"name": "zinnia",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"engines": {
		"node": "20.x"
	},
	"packageManager": "bun@1.3.0",
	"scripts": {
		"dev": "bun run --watch index.ts",
		"build": "bun build index.ts --outdir=dist",
		"vercel": "vercel dev",
		"verify:local": "node scripts/verify-local.mjs",
		"vercel:deploy": "bunx vercel --prod --token $VERCEL_TOKEN --yes",
		"lint": "biome check . && tsc --noEmit",
		"format": "biome format . --write",
		"type-check": "tsc --noEmit",
		"test:stats": "bunx vitest --run --config ./vitest.config.ts -- -t 'tests/stats'",
		"test:api": "bunx vitest --run --config ./vitest.config.ts -- -t 'tests/api'",
		"test:vitest": "bunx vitest --run",
		"test:leetcode": "cd leetcode && bunx vitest --run --pool=threads",
		"test": "bunx vitest --run",
		"verify:deploy": "node scripts/verify-deploy.mjs"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@types/bun": "^1.3.3",
		"@vercel/node": "^5.5.9",
		"@vitest/coverage-v8": "4.0.13",
		"esbuild": "^0.27.0",
		"typescript": "^5.9.3",
		"vercel": "^48.10.10",
		"vitest": "4.0.13"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@octokit/graphql": "^9.0.3",
		"@octokit/rest": "^22.0.1",
		"axios": "^1.13.2",
		"dotenv": "^17.2.3",
		"emoji-name-map": "^2.0.3",
		"github-username-regex": "^1.0.0",
		"word-wrap": "^1.2.5"
	}
}