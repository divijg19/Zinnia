{
	"name": "zinnia",
	"type": "module",
	"private": true,
	"engines": {
		"node": ">=24"
	},
	"packageManager": "bun@1.3.3",
	"scripts": {
		"dev": "vercel dev",
		"build": "bunx tsup leetcode/packages/core/src/index.ts --format esm --out-dir leetcode/packages/core/dist --platform node --target node24 --sourcemap --clean && bunx tsup streak/src/index.ts --format esm --out-dir streak/dist --platform node --target node24 --sourcemap --external sharp --clean",
		"verify:local": "node scripts/verify-local.mjs",
		"vercel:deploy": "bunx vercel --prod --token $VERCEL_TOKEN --yes",
		"lint": "biome check . && tsc --noEmit",
		"format": "biome format . --write",
		"type-check": "tsc --noEmit",
		"test:stats": "bunx vitest --run --config ./vitest.config.ts -- -t 'tests/stats'",
		"test:api": "bunx vitest --run --config ./vitest.config.ts -- -t 'tests/api'",
		"test:leetcode": "cd leetcode && bunx vitest --run --pool=threads",
		"test": "bunx vitest --run",
		"verify:deploy": "node scripts/verify-deploy.mjs"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "^1.3.4",
		"@vercel/node": "^5.5.15",
		"@vitest/coverage-v8": "^4.0.15",
		"esbuild": "^0.27.1",
		"typescript": "^5.9.3",
		"vercel": "^50.0.0",
		"vitest": "^4.0.15",
		"prettier": "^3.7.4",
		"@prettier/plugin-php": "^0.24.0",
		"tsup": "^8.5.1",
		"jsdom": "^27.3.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@octokit/graphql": "^9.0.3",
		"@octokit/rest": "^22.0.1",
		"axios": "^1.13.2",
		"dotenv": "^17.2.3",
		"emoji-name-map": "^2.0.3",
		"github-username-regex": "^1.0.0",
		"word-wrap": "^1.2.5",
		"sharp": "^0.34.5"
	}
}