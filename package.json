{
	"name": "zinnia",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"engines": {
		"node": "20.x"
	},
	"packageManager": "bun@1.3.0",
	"scripts": {
		"dev": "bun run --watch index.ts",
		"build": "bun build index.ts --outdir=dist",
		"vercel": "vercel dev",
		"vercel:deploy": "bunx vercel --prod --token $VERCEL_TOKEN --yes",
		"lint": "biome check .",
		"format": "biome format . --write",
		"type-check": "tsc --noEmit",
		"test:stats": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./stats/jest.config.js --runInBand -u",
		"test:leetcode": "cd leetcode && bunx vitest --run --coverage --coverage.include 'packages/*/src'",
		"test": "npm run test:stats && npm run test:leetcode",
		"verify:deploy": "node scripts/verify-deploy.mjs"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.3",
		"@types/bun": "^1.3.1",
		"@types/jest": "^30.0.0",
		"@vercel/node": "^5.5.4",
		"@vitest/coverage-v8": "4.0.7",
		"esbuild": "^0.25.12",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.5",
		"typescript": "^5.9.3",
		"vercel": "^48.8.2",
		"vitest": "4.0.7"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	}
}
