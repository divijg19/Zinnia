{
	"name": "zinnia",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"engines": {
		"node": ">=24"
	},
	"packageManager": "bun@1.3.3",
	"scripts": {
		"dev": "bun run --watch index.ts",
		"test:all": "node scripts/run-tests-all.mjs",
		"clean:locks": "node scripts/cleanup-locks.mjs",
		"consolidate:configs": "node scripts/consolidate-configs.mjs",
		"build": "bun build index.ts --outdir=dist && npm run build:streak",
		"build:streak": "esbuild \"streak/src/index.ts\" --bundle --platform=node --outfile=streak/dist/index.js --format=esm --sourcemap --external:sharp",
		"vercel": "vercel dev",
		"verify:local": "node scripts/verify-local.mjs",
		"vercel:deploy": "bunx vercel --prod --token $VERCEL_TOKEN --yes",
		"lint": "biome check . && tsc --noEmit",
		"format": "biome format . --write",
		"type-check": "tsc --noEmit",
		"test:stats": "bunx vitest --run --config ./vitest.config.ts -- -t 'tests/stats'",
		"test:api": "bunx vitest --run --config ./vitest.config.ts -- -t 'tests/api'",
		"test:vitest": "bunx vitest --run",
		"test:leetcode": "cd leetcode && bunx vitest --run --pool=threads",
		"test": "bunx vitest --run",
		"verify:deploy": "node scripts/verify-deploy.mjs",
		"streak:php-harness": "php streak/scripts/php-harness.php",
		"streak:compare": "bun ./streak/scripts/compare.ts",
		"streak:compare:full": "npm run streak:php-harness && npm run streak:compare"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "^1.3.3",
		"@vercel/node": "^5.5.13",
		"@vitest/coverage-v8": "4.0.14",
		"esbuild": "^0.27.0",
		"typescript": "^5.9.3",
		"vercel": "^48.12.0",
		"vitest": "4.0.14",
		"prettier": "^3.7.3",
		"@prettier/plugin-php": "^0.24.0",
		"tsup": "^8.5.1"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@octokit/graphql": "^9.0.3",
		"@octokit/rest": "^22.0.1",
		"axios": "^1.13.2",
		"dotenv": "^17.2.3",
		"emoji-name-map": "^2.0.3",
		"github-username-regex": "^1.0.0",
		"word-wrap": "^1.2.5",
		"sharp": "^0.34.5"
	}
}