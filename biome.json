{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/coverage",
			"!**/node_modules",
			"!**/*.min.js",
			"!**/dist",
			"!**/stats/coverage",
			"!**/leetcode/packages/**/dist",
			"!**/streak/src/demo",
			"!**/leetcode/packages/**/src/demo",
			"!**/leetcode/packages/**/src/**/demo",
			"!**/.vercel",
			"!bun.lock",
			"!package.json",
			"!api/_build",
			"!trophy/dist",
			"!streak/dist"
		],
		"maxSize": 1048576
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
