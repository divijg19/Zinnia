{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"alwaysStrict": true,
		"strict": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"ignoreDeprecations": "6.0",
		"sourceMap": true,
		"esModuleInterop": true,
		"types": [],
		"typeRoots": ["../../../types", "./node_modules/@types"]
	},
	"include": ["src", "../../../types/**/*.d.ts"],
	"exclude": ["node_modules", "dist", "tsup.config.ts"]
}
