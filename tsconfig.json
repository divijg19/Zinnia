{
	"compilerOptions": {
		// Environment setup & latest features
		"lib": [
			"ESNext",
			"DOM"
		],
		"target": "ESNext",
		"module": "Preserve",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": false,
		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": false,
		"noEmit": true,
		"baseUrl": ".",
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": [
		"stats/src/**/*.ts",
		// Note: stats/api contains both .js (Vercel) and .ts (Cloudflare Worker) versions
		// We exclude the .ts versions via explicit exclude list below
		"stats/api/**/*.ts",
		"trophy/src/renderer.ts",
		"trophy/api/**/*.ts",
		"streak/src/**/*.ts",
		"streak/api/**/*.ts",
		"leetcode/api/**/*.ts",
		"github/api/**/*.ts",
		"types/**/*.d.ts"
	],
	"exclude": [
		// Quarantine Deno-specific files and folders (not part of Node/Vercel build)
		"trophy/main.ts",
		"trophy/deps.ts",
		"trophy/src/StaticRenderRegeneration/**",
		"trophy/src/Types/deno.d.ts",
		// Exclude Cloudflare Worker API files (have .js equivalents for Vercel)
		"stats/api/index.ts",
		"stats/api/gist.ts"
	]
}